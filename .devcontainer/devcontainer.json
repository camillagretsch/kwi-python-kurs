{
  "name": "KWI Python Course",
  "features": {
  "ghcr.io/devcontainers/features/python:latest": {}
  },
  "postCreateCommand": "PY=/usr/local/python/current/bin/python; [ -x \"$PY\" ] || PY=$(command -v python3 || command -v python); $PY -m pip install -U --user ipykernel jupyter && $PY -m ipykernel install --user --name python312 --display-name \"Python 3.12 (Course)\"",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "extensions.verifySignature": false,
        "python.defaultInterpreterPath": "/usr/local/python/current/bin/python",
        "jupyter.jupyterServerType": "local",

        // Helps avoid “Select Kernel” prompts if an OS Python also exists:
        "jupyter.kernels.excludePythonEnvironments": [
          "/usr/bin/python",
          "/usr/bin/python3",
          "/bin/python",
          "/bin/python3"
        ]
      }
    }
  }
}
